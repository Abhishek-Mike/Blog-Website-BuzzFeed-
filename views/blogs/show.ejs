<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<div class="container" style="margin-top: 5rem;">

  <%- include("../partials/flash")%>

  
  <div class="ui main text container segment">
        <div class="col-lg-7 mt-3"></div>
            <div class="card" style="width: 47rem;">
              <h2 class="card-title" style="font-family: 'Gentium Book Basic', serif;"><%=blog.name%></h2>  
              <img src="<%=blog.img%>" class="card-img-top" alt="...">
            </div>
            <div class="card-body">
              <strong style="font-style: italic;"><h3 class="card-title"><%=blog.author%></h3></strong>
              <br>
              <p class="card-text"><%=blog.desc%></p>
              <a href="/blogs/<%=blog._id%>/edit" class="btn btn-warning">Edit</a>
              <div class="mt-3">
                <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
              </form>
            </div>
             
            </div>
        </div>
        
        <div class="ui main text container segment">
           
            <h1>Comment</h1>
            <form  class="validated-form" action="/blogs/<%=blog._id%>/review" method="POST" style="max-width:70%;" novalidate>
                <div class="mb-3">
                    
                    <textarea class="form-control" id="desc" cols="35" rows="3" name="comment" required placeholder="Write your comments"></textarea>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div>
               
                <button type="submit" class="btn btn-success">Submit</button>
              </form>
            
              <div class="mb-3 mt-3">
                <%for(let review of blog.reviews){%>

                    <div class="card mb-3" style="background-color:f5cb5c;border-radius: 10%;">
                        <div class="card-header text-capitalize">
                          <strong style="color: blueviolet;"><%=review.user%></strong> 
                        </div>
                        <div class="card-body">
                          <p class="card-text"><%=review.comment%></p>
                        </div>
                      </div>
    
                <%}%>
            </div>

        </div>

     

    </div>

</div>


<%- include("../partials/footer")%>
